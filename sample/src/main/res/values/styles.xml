<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OtherTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3A1616</item>
        <item name="colorPrimaryDark">#240000</item>
        <item name="colorAccent">#7C6666</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="android:textColor">#240000</item>
        <item name="android:navigationBarColor">#240000</item>
    </style>

</resources>
